    link(href='/public/css/sweet-alert.css', rel='stylesheet')
    script(src='/public/js/sweet-alert.min.js')
    block css
  body
    mixin topnav(xiugaiClass)
      header.header.white-bg
        .sidebar-toggle-box
          .icon-reorder.tooltips(data-original-title='Toggle Navigation', data-placement='right')
        a.logo(href='javascript:;')
          | 考勤管理
          span 系统
        .top-nav
          ul.nav.pull-right.top-menu
            li.dropdown
              a.dropdown-toggle(data-toggle='dropdown', href='javascript:;')
                span.username 欢迎您，#{name}
                b.caret
              ul.dropdown-menu.extended.logout
                .log-arrow-up
                li
                  a(href='javascript:;')
                    i.icon-suitcase
                    | #{name}
                li(class='#{xiugaiClass}')
                  a(href='javascript:;')
                    i.icon-cog
                    |  修改密码
                li
                  a(href='javascript:;')
                    i.icon-bell-alt
                    |  通知
                li
                  a(href='/logout')
                    i.icon-key
                    |  退出
    mixin adminleftnav
      aside
        #sidebar.nav-collapse
          ul.sidebar-menu
            li.active.leftli-userinfo
              a(href='javascript:;')
                i.icon-dashboard
                span 员工信息
            li.sub-menu.leftli-bumenmanage
              a(href='javascript:;')
                i.icon-dashboard
                span 部门管理
            li.sub-menu
              a(href='javascript:;')
                i.icon-dashboard
                span 员工代办事项管理
            li.sub-menu
              a(href='javascript:;')
                i.icon-dashboard
                span 班表设置管理
            li.sub-menu.leftli-zhiwei
              a(href='javascript:;')
                i.icon-dashboard
                span 职位发布管理
            li.sub-menu
              a(href='javascript:;')
                i.icon-dashboard
                span 考勤记录管理
            li.sub-menu
              a(href='javascript:;')
                i.icon-dashboard
                span 请假记录
            li.sub-menu
              a(href='javascript:;')
                i.icon-dashboard
                span 个人信息
            li.sub-menu
              a(href='javascript:;')
                i.icon-dashboard
                span 添加管理员
    mixin userleftnav
      aside
        #sidebar.nav-collapse
          ul.sidebar-menu
            li.active.leftli-usersign
              a(href='javascript:;')
                i.icon-dashboard
                span 签到
            li.sub-menu.leftli-daiban
              a(href='javascript:;')
                i.icon-dashboard
                span 事项申请
            li.sub-menu.leftli-userqingjia
              a(href='javascript:;')
                i.icon-dashboard
                span 请假
    // 导航
    block nav
    // 内容
    block content
    // 页脚
    block footer

  script(src='/bootstrap/js/jquery.js')
